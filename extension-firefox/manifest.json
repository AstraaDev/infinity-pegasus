  "description": "Make Pegasus great again!",
  "homepage_url": "https://github.com/Litarvan/infinity-pegasus",
  "icons": {
    "128": "icon_128.png"
  },
  "browser_action": {
    "default_title": "Infinity Pegasus",
    "default_icon": "enabled.svg"
